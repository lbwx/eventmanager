<table class="table table-striped table-hover table-condensed text-left js-guest-group-table">
	{%for guestGroup in guestGroups%}
		<tr data-group-id="{{guestGroup.id}}">
			<td class="js-guest-group-rename">
				<span>{{guestGroup.name}}</span>
				<input type="text" name="newName" placeholder="{{guestGroup.name}}" class="form-control hidden">
			</td>
			<td><span class='js-guest-group-delete button fa fa-trash-o'></span></td>
		</tr>
	{%endfor%}
</table>